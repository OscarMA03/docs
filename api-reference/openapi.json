    "/create-chat-agent": {
      "post": {
        "summary": "Create Chat Agent",
        "description": "Create a Retell LLM and Chat Agent with configuration",
        "security": [],
        "parameters": [
          {
            "name": "x-builder-prime-api-key",
            "in": "header",
            "required": true,
            "schema": {
              "type": "string"
            },
            "description": "Builder Prime API key for authentication"
          }
        ],
        "requestBody": {
          "required": true,
          "content": {
            "application/json": {
              "schema": {
                "type": "object",
                "required": ["class_id", "configuration"],
                "properties": {
                  "class_id": {
                    "type": "string",
                    "description": "Class identifier"
                  },
                  "start_speaker": {
                    "type": "string",
                    "description": "Starting speaker for the conversation (e.g., 'agent')"
                  },
                  "configuration": {
                    "type": "object",
                    "properties": {
                      "company_url": {
                        "type": "string",
                        "description": "Company's API endpoint"
                      },
                      "company_name": {
                        "type": "string",
                        "description": "Official business name"
                      },
                      "company_number": {
                        "type": "string",
                        "description": "Callback number for follow-ups"
                      },
                      "service_label_type": {
                        "type": "string",
                        "description": "What to call the appointment (e.g., 'In Home Consultation')"
                      },
                      "ai_disclosure": {
                        "type": "string",
                        "description": "Whether agent announces it's AI (e.g., 'true')"
                      },
                      "business_hours": {
                        "type": "string",
                        "description": "When to offer appointments"
                      },
                      "service_areas": {
                        "type": "string",
                        "description": "Geographic restrictions"
                      },
                      "callback": {
                        "type": "string",
                        "description": "Create task to callback at later time"
                      },
                      "custom_greeting": {
                        "type": "string",
                        "description": "Custom greeting text"
                      },
                      "agent_name": {
                        "type": "string",
                        "description": "Agent name (e.g., 'Sally')"
                      },
                      "services_supported": {
                        "type": "string",
                        "description": "Comma-separated list of services included"
                      },
                      "services_not_included": {
                        "type": "string",
                        "description": "Comma-separated list of services excluded"
                      }
                    }
                  },
                  "knowledgeBase": {
                    "type": "object",
                    "properties": {
                      "name": {
                        "type": "string",
                        "description": "Name of the knowledge base"
                      },
                      "urls": {
                        "type": "array",
                        "items": {
                          "type": "string"
                        },
                        "description": "Array of URLs for the knowledge base"
                      }
                    }
                  },
                  "agent_name": {
                    "type": "string",
                    "description": "Agent name"
                  }
                }
              }
            }
          }
        },
        "responses": {
          "200": {
            "description": "Chat agent created successfully",
            "content": {
              "application/json": {
                "schema": {
                  "type": "object",
                  "properties": {
                    "success": {
                      "type": "boolean"
                    },
                    "data": {
                      "type": "object",
                      "properties": {
                        "chat_llm_id": {
                          "type": "string"
                        },
                        "chat_agent_id": {
                          "type": "string"
                        }
                      }
                    },
                    "error": {
                      "type": "string",
                      "nullable": true
                    }
                  }
                }
              }
            }
          }
        }
      }
    },
